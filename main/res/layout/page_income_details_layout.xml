<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_basic_salary"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Basic Salary"/>
		<EditText
			android:id="@+id/val_basic_salary"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_special_allowance"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Special Allowance"/>
		<EditText
			android:id="@+id/val_special_allowance"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_hra"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="House Rent Allowance"/>
		<EditText
			android:id="@+id/val_hra"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_conveyance_allowance"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Conveyance Allowance"/>
		<EditText
			android:id="@+id/val_conveyance_allowance"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_lta"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Leave Travel Allowance"/>
		<EditText
			android:id="@+id/val_lta"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_medical_allowance"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Medical Allowance"/>
		<EditText
			android:id="@+id/val_medical_allowance"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_employer_pf"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Employer Provident Fund"/>
		<EditText
			android:id="@+id/val_employer_pf"
			android:minWidth="80px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<Button
	  android:id="@+id/btn_proceed"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="Save and Proceed" 
	  android:onClick="proceed"
      android:textSize="10dip"
	  android:layout_gravity="center"/>
	  
</LinearLayout>
</ScrollView>	