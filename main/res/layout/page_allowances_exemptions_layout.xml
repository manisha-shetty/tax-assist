<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
	<TextView android:id="@+id/lbl_hra_exemption"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="18dip"
            android:padding="10dip"
			android:textStyle="bold"
            android:textColor="#ffff00"
			android:text="HRA Exemption u/s 10"/>
			
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_rent"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Enter actual Annual Rent paid"/>
		<EditText
			android:id="@+id/val_rent"
			android:minWidth="60px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>	
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_city"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="You stay in a city that is"/>
		<Spinner
			android:id="@+id/select_city"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:entries="@array/cities_array"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_calc_hra_exemption"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Calculated HRA Exemption"/>
		<TextView android:id="@+id/val_calc_hra_exemption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"/>
		<Button
			android:id="@+id/btn_calc_hra_exemption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Calculate HRA Exemption" 
			android:onClick="calculateHRAExemption"
			android:textSize="10dip"/>
  	</LinearLayout>

	<TextView android:id="@+id/lbl_lta_exemption"
        android:layout_width="170px"
        android:layout_height="wrap_content"
        android:textSize="18dip"
        android:padding="10dip"
		android:textStyle="bold"
        android:textColor="#ffff00"
		android:text="LTA Exemption u/s 10"/>
		
	<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_lta_claimed"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="LTA amount claimed or settled"/>
		<EditText
			android:id="@+id/val_lta_claimed"
			android:minWidth="60px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_travel_expenses"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="Travel Expenses submitted"/>
		<EditText
			android:id="@+id/val_travel_expenses"
			android:minWidth="60px"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:textSize="12dip"
			android:text="0"/>
	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_calc_lta_exemption"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="LTA Allowed for Exemption"/>
		<TextView android:id="@+id/val_calc_lta_exemption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"/>
		<Button
			android:id="@+id/btn_calc_lta_exemption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Calculate LTA Exemption" 
			android:onClick="calculateLTAExemption"
			android:textSize="10dip"/>
  	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_calc_lta_exemption"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="LTA Allowed for Exemption"/>
		<TextView android:id="@+id/val_calc_lta_exemption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"/>
		<Button
			android:id="@+id/btn_calc_lta_exemption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Calculate LTA Exemption" 
			android:onClick="calculateLTAExemption"
			android:textSize="10dip"/>
  	</LinearLayout>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_conveyance_exempt"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffff00"
			android:text="Conveyance Allowance exempt u/s 10"/>
		<TextView android:id="@+id/val_conveyance_exempt"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffff00"
			android:text="0"/>
	</LinearLayout>	
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
		<TextView android:id="@+id/lbl_prof_tax"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffff00"
			android:text="Professional Tax paid"/>
		<TextView android:id="@+id/lbl_prof_tax"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:textSize="12dip"
            android:padding="10dip"
            android:textColor="#ffffff"
			android:text="2500"/>
	</LinearLayout>	
	
</LinearLayout>
</ScrollView>